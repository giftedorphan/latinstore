<div class="wrapper">
  <div class="col-md-12">
    <h1 class="first_title"><b>Items</b></h1>
  </div>

  <div class="col-md-12">
    <div class="col-md-12 col-md-push-1">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Stock</th>
            <th>Price</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr data-link="<%= edit_item_path(:id => item.id) %>" class="data-row">
              <td class="col-md-1"> <%= item.name %> </td>
              <td class="col-md-1"> <%= item.description %> </td>
              <td class="col-md-1"> <%= item.stock %> </td>
              <td class="col-md-1"> <%= item.price %> </td>
              <td class="col-md-2">
                <%= link_to 'Eliminar item', item_path(id: item.id), :method => 'delete', data: { confirm: 'Â¿Estas seguro?' }, :class => 'btn btn-danger btn-block' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="col-md-4 col-md-push-2 center-div space">
    <%= link_to 'Agregar item', new_item_path, {class: 'btn btn-primary btn-block'} %>
  </div>

  <div class="col-md-4 col-md-push-2 center-div space">
    <%= link_to 'Volver', root_path, {class: 'btn btn-primary btn-block'} %>
  </div>