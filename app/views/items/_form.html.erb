<%= simple_form_for @item, html: { multipart: true } do |f| %>
  <%= f.error_notification %>

<%= f.input :name %>
<%= f.input :price %>
<%= f.input :stock %>
<%= f.input :description %>

  <div class="col-md-4 col-md-push-2 center-div">
    <%= f.button :submit, ( f.object.new_record? ? "Crear" : "Actualizar"), {class: 'btn btn-success btn-block'} %>
  </div>
<% end %>