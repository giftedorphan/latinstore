<div class="wrapper">
  <div class="col-md-12">
    <h1 class="first_title"><b>tags</b></h1>
  </div>

  <div class="col-md-12">
    <div class="col-md-12 col-md-push-1">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Name</th>
          </tr>
        </thead>
        <tbody>
          <% @tags.each do |tag| %>
            <tr data-link="<%= edit_tag_path(:id => tag.id) %>" class="data-row">
              <td class="col-md-1"> <%= tag.name %> </td>
              <td> <%= link_to 'Eliminar', tag_path(tag), method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger btn-sm' %> </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="col-md-4 col-md-push-2 center-div space">
    <%= link_to 'Agregar tag', new_tag_path, {class: 'btn btn-primary btn-block'} %>
  </div>

  <div class="col-md-4 col-md-push-2 center-div space">
    <%= link_to 'Volver', root_path, {class: 'btn btn-primary btn-block'} %>
  </div>