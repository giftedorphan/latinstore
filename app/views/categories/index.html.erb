<div class="wrapper">
  <div class="col-md-12">
    <h1 class="first_title"><b>Categories</b></h1>
  </div>

  <div class="col-md-12">
    <div class="col-md-12 col-md-push-1">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr data-link="<%= edit_category_path(:id => category.id) %>" class="data-row">
              <td class="col-md-1"> <%= category.name %> </td>
              <td class="col-md-2">
                <%= link_to 'Eliminar categoria', category_path(id: category.id), :method => 'delete', data: { confirm: 'Â¿Estas seguro?' }, :class => 'btn btn-danger btn-block' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="col-md-4 col-md-push-2 center-div space">
    <%= link_to 'Agregar categoria', new_category_path, {class: 'btn btn-primary btn-block'} %>
  </div>

  <div class="col-md-4 col-md-push-2 center-div space">
    <%= link_to 'Volver', root_path, {class: 'btn btn-primary btn-block'} %>
  </div>